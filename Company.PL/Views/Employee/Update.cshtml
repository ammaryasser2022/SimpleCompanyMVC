@model EmployeeViewModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update Employee</h1>

<br />
<br />


<form asp-action="Update" enctype="multipart/form-data" >
    <div asp-validation-summary="All" class=" alert alert-danger">

    </div>
    <partial name="PartialViews/UpdateCreateEmployeePartialView" model="Model" />
    <input asp-for="ImageName" hidden />


    <br />


    <input type="submit" value="Save" class="btn btn-warning" />
    <a asp-action="Index" class=" btn btn-light"> Back To List </a>

</form>
@section Validation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}