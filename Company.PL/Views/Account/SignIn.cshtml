@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div asp-validation-summary="All" class=" alert alert-danger"> </div>

	<div class="agileits-top">
		<form asp-action="SignIn" >

			
			<br />
			<label asp-for="Email" class="col-form-label"> </label>
			<input class="text m-2" asp-for="Email" placeholder="Email">
			<br />
			<label asp-for="Password" class="col-form-label"> </label>
			<input class="text m-2" asp-for="Password" placeholder="Password">
			<br />
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
		<p> <a asp-action="ForgetPassword"> Forget Password ? </a></p>

	</div>
</div>

