@model SignUpViewModel
@{
	ViewData["Title"] = "SingnUp";
	Layout = "~/Views/Shared/AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div asp-validation-summary="All" class=" alert alert-danger"> </div>

		<div class="agileits-top">
		<form asp-action="SignUp" method="post">

			<label asp-for="UserName" class="col-form-label"> </label>
			<input class="text " asp-for="UserName" >
			<br/>
			<label asp-for="FirstName" class="col-form-label"> </label>
			<input class="text" asp-for="FirstName" placeholder="First Name">
			<br />
			<label asp-for="LastName" class="col-form-label"> </label>
			<input class="text" asp-for="LastName" placeholder="LastName">
			<br />
			<label asp-for="Email" class="col-form-label"> </label>
			<input class="text email" asp-for="Email" placeholder="Email">
			<br />
			<label asp-for="Password" class="col-form-label"> </label>
			<input class="text" asp-for="Password" placeholder="Password">
			<br />
			<label asp-for="ConfirmPassword" class="col-form-label"> </label>
			<input class="text w3lpass"  asp-for="ConfirmPassword" placeholder="Confirm Password">
			<br />
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p> have an Account? <a asp-action="SignIn">  Login Now  </a></p>
	</div>
</div>

