@model RoleViewModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update Roles </h1>

<br />
<br />


<form asp-action="Update" enctype="multipart/form-data" >
    <div asp-validation-summary="All" class=" alert alert-danger">

    </div>
    <partial name="RolePartialViews/UpdateCreatePartialView" model="Model" />
    <br />
    <a asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id" class=" btn btn-success"> Add Or Remove User </a>



    <input type="submit" value="Save" class="btn btn-warning" />
    <a asp-action="Index" class=" btn btn-light"> Back To List </a>

</form>
@section Validation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}